<%= render 'shared/navbar' %>

<div class="bar-selection">
  <div class="sidebar not-show">
    <%= render 'filters' %>
    <h3>Please select up to 7 Bars:</h3>
    <h2 id="selection">0 / 7</h2>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="cards-container shift-left">
    <% @group.bars.each do |bar| %>
      <%= link_to (render 'shared/bar-card', bar: bar), bar, method: :patch, remote: true %>
    <% end %>
  </div>
</div>

<%= link_to 'Create BarCrawl', edit_group_path(@group) %>
