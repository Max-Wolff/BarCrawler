<div class="container">
  <div class="header-during-crawl">
    <h2> <i class="fas fa-map-marked-alt"></i> <%= stop.bar.name %> </h2>
    <h2>Bar <%= stop.rank%> / <%= @last_stop%></h2>
  </div>

  <div class="navigation-display">
    <div class="map-placeholder" id="secondmap" style="width: 58vw; height: 80vh;" data-markers="<%= markers.to_json %>" data-route="<%= route.to_json %>" data-mapbox-api-key="<%= ENV['SECOND_MAP_API_KEY'] %>"></div>
  </div>

  <%= link_to ("<i class='fas fa-spinner' ></i> Drink selector").html_safe, unique_group_stop_select_path, :class =>'button-spin-crawl'%>

  <%= link_to ("<i class='fas fa-dice-two' ></i> Drinking game").html_safe, unique_group_stop_game_path, :class =>'button-game'%>

  <div class="footer-during-crawl">
    <div class="footer-navigation">
      <% unless stop.rank == 1 %>
        <%= link_to ("<i class='fas fa-backward'></i>").html_safe, unique_group_stop_path(@group.token, (stop.rank - 1)) %>
      <% end %>
      <% unless stop.rank == @last_stop %>
        <%= link_to ("<i class='fas fa-forward'></i>").html_safe, unique_group_stop_path(@group.token, (stop.rank + 1)) %>
      <% end %>
    </div>
  </div>
</div>
